#
# Main arguments, all optional
#
title: Hallway Panel
widget_dimensions: [114, 58]
widget_margins: [5, 5]
columns: 5
global_parameters:
  use_comma: 1

s_train_status:
  title: S-Tog
  widget_type: sensor
  entity: sensor.s_train_b_next
  sub_entity: sensor.s_train_b_status
  units: "min"
  widget_style: "background-color: #6DB657;"
  value_style: "color: #ffffff; font-size: %300; font-weight: bold;"
  unit_style: "color: #ffffff;"

travel_time:
  title: Rejsetid
  widget_type: sensor
  entity: sensor.travel_time_to_work_public_transit
  sub_entity: sensor.travel_time_to_work_public_transit_last_updated
  value_style: "color: #ffffff; font-size: %300; font-weight: bold;"
  unit_style: "color: #ffffff;"

wind:
  title: Vind
  widget_type: sensor
  entity: sensor.dark_sky_wind_speed_name
  sub_entity: sensor.dark_sky_wind_bearing_name
  container_style: 'font-size: 150%;'

outside_temp:
  title: Temperatur
  widget_type: sensor
  precision: 1
  entity: sensor.dark_sky_temperature
  sub_entity: sensor.dark_sky_apparent_temperature_text

precip:
  title: Nedbør
  widget_type: sensor
  entity: sensor.dark_sky_precip_intensity
  sub_entity: sensor.dark_sky_precip_and_probability
  precision: 1

weather_summary:
  title: DMI Vejrudsigt
  widget_type: sensor
  entity: sensor.dmi_city_weather
  container_style: 'font-size: 150%; margin-top: 20px;'

more_weather:
  title: Vejr Detaljer
  widget_type: navigate
  dashboard: Hallway-weather
  icon_inactive: fa-cloud
  args:
    timeout: 60
    return: Hallway

got_guests:
  widget_type: input_boolean
  entity: input_boolean.guests
  title: Gæster
  use_hass_icon: 1

space_heater:
  widget_type: switch
  entity: switch.space_heater
  title: Radiator
  use_hass_icon: 1

all_speakers:
  title: All Speakers
  widget_type: media_player
  entity: media_player.all_speakers
  step: 5
east_side_speakers:
  title: East Side Speakers
  widget_type: media_player
  entity: media_player.east_side_speakers
  step: 5

