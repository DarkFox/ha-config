layout:
    # 1,                  2,                  3,                  4,                  5
    - include: datetime
    - include: scene_widgets
    - include: playlist_controls
    - date(2x1)         ,                     spacer,             clock(2x1)
    - bright_scene(1x2),  s_train_status(1x2),weather_summary(2x2),                   more_weather(1x2)
    -
    - default_scene(1x2), travel_time(1x2),   outside_temp(1x2),  precip(1x2),        wind(1x2)
    -
    - dimmed_scene(1x2)
    -
    - ambient_scene(1x2), spacer(3x2),                                                space_heater(1x2)
    -
    - night_scene(1x2),   playlist_current(4x1)
    -                     playlist_previous,  playlist_end,       playlist_next,      playlist_player
    - off_scene(1x2),     all_speakers(2x4),                      east_side_speakers(2x4)
    -
    - got_guests(1x2)
